<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/starting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/destination_title"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:fontFamily="sans-serif"
        android:text="@string/destination"
        android:textColor="@color/background"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/destination_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/starting"
        android:textColor="@color/background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDestination"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/starting_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />
    <!--android:hint="Choose destination"-->

    <TextView
        android:id="@+id/textStart"
        android:layout_width="234dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/textDestination"
        android:layout_alignTop="@+id/destination_title"
        android:layout_marginStart="-91dp"
        android:background="@android:drawable/editbox_background_normal"
        android:text="@string/current_location"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />
    <!--android:hint="Choose starting point"-->
    <TextView
        android:id="@+id/textDest"
        android:layout_width="234dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/textDestination"
        android:layout_alignTop="@+id/starting_title"
        android:layout_marginStart="-88dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="9dp"
        android:background="@android:drawable/editbox_background_normal"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="226dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/textDest"
        android:layout_marginLeft="-234dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/textDest"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/start_route_button"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/destination_title"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/background_light"
        android:enabled="true"
        android:text="@string/go"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
